{
    "id": "/app-killrweather",
    "instances": 1,
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "abhayagarwal/killrweather:0.3",
            "privileged": true,
            "forcePullImage": true
        }
    },
    "env": {
        "CASSANDRA_SEEDS": "cassandra-dcos-node.cassandra.dcos.mesos",
        "KAFKA_HOSTS": "broker-0.kafka.mesos:1025",
        "SPARK_HA_MASTER": "local[*]",
        "AKKA_SEED0": "akka.tcp://KillrWeather@akka-seed-0.marathon.mesos:2551",
        "AKKA_SEED1": "akka.tcp://KillrWeather@akka-seed-1.marathon.mesos:2552",
        "AKKA_HOST": "app-killrweather.marathon.mesos"
    },
    "cmd": "sleep 30 && export AKKA_BIND_HOST=$(hostname) && sbt -mem 1024 app/run",
    "ports": [2550],
    "cpus": 1,
    "mem": 1024
}
